    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/lib/index.js",
            "args": [
                "trial",
                // "dash-editor",
                // "-d",
                // "..//repos//Iridium//Modules//ANG",
                // "-o"
            ],
            // "args": [
            //     "serve",
            //     "dash",
            //     "-d",
            //     "C:\\users\\administrator\\sources\\Iridium\\Modules\\Ang",
            //     "-m",
            //     "4096"
            // ],
            // "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ]
        },
        {
            "name": "Launch via npm",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug"
            ]
        }
    ]
}